---
const { experience, reverse } = Astro.props;
---

<section class="grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-5">
    <!--image-->
    <div class={`xl:col-span-3 ${reverse ? 'order-1' : 'order-1 lg:order-2'}`}>
        <div class="w-full relative pt-[56.25%]">
            <div class="absolute top-0 left-0 size-full bg-red-500"></div>
        </div>
    </div>

    <!-- description -->
    <div class={`px-4 py-2 lg:py-4 lg:px-6 xl:px-10 flex flex-col justify-between xl:col-span-2 ${reverse ? 'order-2 lg:order-1' : 'order-2'}`}>
        <div>
            <div class="flex items-center gap-2">
                <h2 class="text-gray-200 text-xl"> {experience.title} </h2>

                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-8 text-indigo-400 hover:text-indigo-500 cursor-pointer transition-all">
                    <path stroke-linecap="round" stroke-linejoin="round" d="m11.25 11.25.041-.02a.75.75 0 0 1 1.063.852l-.708 2.836a.75.75 0 0 0 1.063.853l.041-.021M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Zm-9-3.75h.008v.008H12V8.25Z" />
                </svg>
            </div>
            <p class="text-gray-400 text-base leading-7 tracking-wide lg:line-clamp-4 mt-2"> {experience.description} </p>
        </div>
        <a href={experience.link} class="h-10 px-10 rounded-md bg-indigo-400 hover:bg-indigo-500 transition-all inline-flex items-center ml-auto text-gray-100 text-lg" target="_blank" title={experience.title}> Demo </a>
    </div>
</section>

