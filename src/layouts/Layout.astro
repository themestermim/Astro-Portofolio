---
import Header from '../components/Layouts/Header.astro';
const { title, description, robots, canonical } = Astro.props;
import '../assets/css/index.css';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
        <link rel="stylesheet" href="/assets/fonts/fonts.css" />
		<!--<link rel="icon" type="image/svg+xml" href="/favicon.svg" />-->
        <!--<link rel="preconnect" href="https://fonts.googleapis.com">-->
        <!--<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>-->
        <!--<link href="https://fonts.googleapis.com/css2?family=Archivo:ital,wght@0,100..900;1,100..900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">-->
		<meta name="generator" content={description} />
		<meta name="canonical" content={`https://themestermim.vercel.app/${canonical}`} />
		<meta name="robots" content={robots} />
		<meta name="google-site-verification" content="NtHZFw9D7zYrHV3wMMlSEGwrZdPFP0DVJKTsmOx-ELw" />
		<title>{title}</title>
	</head>


	<body class="bg-gray-900 font-archivo min-h-fit">
        <Header />
		<!--client:load-->
        <div class="pb-12">
            <slot />
        </div>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
